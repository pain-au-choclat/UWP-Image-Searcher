    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Image_Searcher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image x:Name="foundObjectImage" HorizontalAlignment="Center" Height="999" VerticalAlignment="Center" Width="1499"/>
        <TextBox x:Name="searchTermsTextBox" HorizontalAlignment="Left" 
            Margin="1247,916,0,0" Text="" VerticalAlignment="Top" 
